<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<%= form_with model: @message, class: "js-form mb-3", local: false do |f| %>
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>

<div class="js-message-errors"></div>

<ul class="messages">
  <%= render @messages %>
</ul>

